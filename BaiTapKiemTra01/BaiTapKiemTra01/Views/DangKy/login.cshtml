
@{
    ViewData["Title"] = "login";
}

<h1>login</h1>
@Model TaiKhoanViewModel
<div class="container">
	<form method="post">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h2 class="text-center">Registration Form - Input User's Detail Information</h2>
		</div>
		<div class="panel-body">
			<div class="form-group">
				<label for="TenTaiKhoan">Username:</label>
				<input required="true" type="text" class="form-control" id="TenTaiKhoan">
			</div>
			<div class="form-group">
				<label for="HoTen">Full Name:</label>
				<input required="true" type="text" class="form-control" id="HoTen">
			</div>
			<div class="form-group">
				<label for="Tuoi">Age:</label>
				<input required="true" type="number" class="form-control" id="Tuoi" min="0">
			</div>
			<div class="form-group">
				<label for="MatKhau">Password:</label>
				<input required="true" type="password" class="form-control" id="MatKhau">
			</div>
			<div class="form-group">
				<label for="confirmation_pwd">Confirmation Password:</label>
				<input required="true" type="password" class="form-control" id="confirmation_pwd">
			</div>
			<button type="submit" class="btn btn-primary">Register</button>
		</div>
	</div>
		@if (Model != null)
		{
			<p>Usernam đã nhập là: @Model.TenTaiKhoan</p>
			<p>Password sau mã hoá là: @Model.MatKhau</p>
		}
	</form>
</div>
