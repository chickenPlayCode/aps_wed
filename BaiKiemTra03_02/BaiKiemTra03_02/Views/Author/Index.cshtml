@model IEnumerable<ProjectA.Models.Author>

@{
    ViewData["Title"] = "Danh sách Tác giả";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Create" class="btn btn-primary">Thêm Tác giả</a>

<table class="table">
    <thead>
        <tr>
            <th>Tên Tác giả</th>
            <th>Quốc tịch</th>
            <th>Năm sinh</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.AuthorName</td>
                <td>@author.Nationality</td>
                <td>@author.BirthYear</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@author.AuthorId" class="btn btn-warning">Chỉnh sửa</a>
                    <a asp-action="Delete" asp-route-id="@author.AuthorId" class="btn btn-danger">Xóa</a>
                    <a asp-action="Details" asp-route-id="@author.AuthorId" class="btn btn-info">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
