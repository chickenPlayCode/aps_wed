@model Author

<h1>Chi tiết Tác giả</h1>

<div>
    <h4>Tác giả</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên Tác giả</dt>
        <dd class="col-sm-10">@Model.AuthorName</dd>
        <dt class="col-sm-2">Quốc tịch</dt>
        <dd class="col-sm-10">@Model.Nationality</dd>
        <dt class="col-sm-2">Năm sinh</dt>
        <dd class="col-sm-10">@Model.BirthYear</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Trở về</a>
